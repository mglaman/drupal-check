{
    "name": "mglaman/drupal-check",
    "description": "CLI tool for running checks on a Drupal code base",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Glaman",
            "email": "nmd.matt@gmail.com"
        }
    ],
    "require": {
        "php": "~7.1",
        "composer/xdebug-handler": "^1.3",
        "jean85/pretty-package-versions": "^1.2",
        "phpstan/phpstan": "0.11.x-dev#bf4e560b898dd77e5d4b22978e5fddece3d7a364",
        "mglaman/phpstan-drupal": "^0.11.1",
        "phpstan/phpstan-deprecation-rules": "^0.11.0",
        "mglaman/phpstan-junit": "^0.11.1",
        "symfony/console": "~3.2 || ~4.0",
        "webflo/drupal-finder": "^1.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "drupal-check"
    ],
    "autoload": {
        "psr-4": {
            "DrupalCheck\\": "src"
        }
    }
}
